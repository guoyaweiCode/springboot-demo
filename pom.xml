<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.4.0</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<groupId>com.guoyw</groupId>
	<artifactId>springboot-demo</artifactId>
	<version>1.0.0</version>
  <packaging>pom</packaging>
	<name>springboot-demo</name>
	<description>springboot-demo</description>

	<properties>
		<java.version>1.8</java.version>
		<springboot.version>2.4.0</springboot.version>
    <mysql.connector.version>8.0.22</mysql.connector.version>

    <!--子依赖 版本-->
    <demo.version>1.0.0</demo.version>

    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>



    <!--依赖包 版本管理-->
    <lombok.version>1.18.12</lombok.version>
    <mapstruct.version>1.4.1.Final</mapstruct.version>
    <screw.version>1.0.5</screw.version>

	</properties>

  <modules>
    <module>common-mbg</module>
    <module>demo201206-mapstruct</module>
    <module>demo201217-screw</module>
    <module>demo201220-properties</module>

  </modules>

  <dependencyManagement>
    <dependencies>

      <!--jdbc 驱动-->
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-jdbc</artifactId>
        <version>${springboot.version}</version>
      </dependency>

      <dependency>
        <groupId>mysql</groupId>
        <artifactId>mysql-connector-java</artifactId>
        <version>${mysql.connector.version}</version>
        <scope>provided</scope>
      </dependency>

      <!--start springboot-demo 模块依赖-->
      <dependency>
        <groupId>com.guoyw</groupId>
        <artifactId>demo201206-mapstruct</artifactId>
        <version>${demo.version}</version>
      </dependency>

      <!--end springboot-demo 模块依赖-->

      <!--start 子模块依赖 统一管理 -->

      <!--bean 映射依赖-->
      <dependency>
        <groupId>org.mapstruct</groupId>
        <artifactId>mapstruct</artifactId>
        <version>${mapstruct.version}</version>
      </dependency>

      <!--数据库 字典依赖-->
      <dependency>
        <groupId>cn.smallbun.screw</groupId>
        <artifactId>screw-core</artifactId>
        <version>${screw.version}</version>
      </dependency>


      <!--end 子模块依赖 统一管理 -->


    </dependencies>
  </dependencyManagement>

	<dependencies>

    <!--start springboot 相关依赖 -->

    <!--springboot 核心依赖-->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
    </dependency>
    <!--springboot 单元测试依赖-->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>
    <!--springboot web-->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>



    <!--end springboot 相关依赖 -->


    <!--start  常用工具 相关依赖 -->
    <!--lombok-->
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>${lombok.version}</version>
    </dependency>

    <!--end  常用工具 相关依赖 -->


	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <annotationProcessorPaths>
            <path>
              <groupId>org.mapstruct</groupId>
              <artifactId>mapstruct-processor</artifactId>
              <version>${mapstruct.version}</version>
            </path>
            <path>
              <groupId>org.projectlombok</groupId>
              <artifactId>lombok</artifactId>
              <version>${lombok.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>
		</plugins>
	</build>

</project>
